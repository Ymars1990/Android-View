<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />
        <com.mars.marsview.view.NumTipSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:circleButtonColor="@color/bgblur"
        app:circleButtonRadius="15dp"
        app:circleButtonTextColor="@color/white"
        app:circleButtonTextSize="10sp"
        app:isShowButtonText="true"
        app:maxProgress="100"
        app:progressColor="@color/seekbar_blue"
        app:progressHeight="10dp"
        app:selectProgress="0"
        app:tickBarColor="@color/seekbar_gray"
        app:tickBarHeight="10dp" >
    </com.mars.marsview.view.NumTipSeekBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <com.mars.marsview.view.ScannerSpeedView
            android:id="@+id/myScannerspeedView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
