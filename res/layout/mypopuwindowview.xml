<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mars="http://schemas.android.com/apk/com.mars.marsview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/popuMainItem01_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/popuMainItem01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.0"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="日期" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/popuMainItem01Text"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_textview"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#939090" />

            <LinearLayout
                android:id="@+id/popuMainItem02_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/popuMainItem02"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.0"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="卡号" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/popuMainItem02Text"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_textview"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#939090" />

            <LinearLayout
                android:id="@+id/popuMainItem03_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/popuMainItem03"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.0"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="交易类型" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/popuMainItem03Text"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_textview"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#939090" />

            <LinearLayout
                android:id="@+id/popuMainItem04_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/popuMainItem04"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.0"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="交易金额" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/popuMainItem04Text"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_textview"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#939090" />

        <ListView
            android:id="@+id/mypopuSecondaryLv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.0" >
        </ListView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#939090" />

    <LinearLayout
        android:id="@+id/mywheelviewdialog_bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgblur"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/popuReset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/wheelviewdialog_left_selector"
            android:padding="10dp"
            android:text="重置"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#B8B8B8" >
        </View>

        <Button
            android:id="@+id/popuConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/wheelviewdialog_right_selector"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#939090" />

</LinearLayout>