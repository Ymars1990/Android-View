<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" >
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/subtractImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/sub_selector" />
        </LinearLayout>

        <com.mars.marsview.view.NumTipSeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            app:circleButtonColor="@color/seekbar_blue"
            app:circleButtonRadius="15dp"
            app:circleButtonTextColor="@color/white"
            app:circleButtonTextSize="10sp"
            app:isShowButtonText="true"
            app:maxProgress="100"
            app:progressColor="@color/seekbar_blue"
            app:progressHeight="10dp"
            app:selectProgress="50"
            app:tickBarColor="@color/seekbar_gray"
            app:tickBarHeight="10dp" >
        </com.mars.marsview.view.NumTipSeekBar>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/addImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add_selector" />
        </LinearLayout>
    </LinearLayout>
	<TextView 
	    android:id="@+id/showSeekbar_progress"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:gravity="center"
	    />
</LinearLayout>