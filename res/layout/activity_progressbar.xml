<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mars="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5" />

            <com.mars.marsview.view.HorizontalProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="5dp"
                android:progress="50" />

            <com.mars.marsview.view.HorizontalProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="5dp"
                android:progress="20"
                mars:progress_reach_height="5dp"
                mars:progress_unreach_height="5dp" />

            <com.mars.marsview.view.HorizontalProgressBar
                android:id="@+id/showProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="30dp"
                android:padding="5dp"
                android:progress="90"
                mars:progress_text_color="#2A00FF" />

            <com.mars.marsview.view.HorizontalProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:progress="110"
                mars:progress_text_color="#2A00FF" />
            <com.mars.marsview.view.LoadingView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp" />
            <com.mars.marsview.view.RoundProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:progress="50"
                mars:progress_text_color="#2A00FF" />

            <com.mars.marsview.view.RoundProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:progress="20"
                mars:progress_text_color="#2A00FF" />

            <com.mars.marsview.view.RoundProgressBar
                android:id="@+id/showRound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:progress="0"
                mars:progress_radius="50dp"
                mars:progress_text_color="#2A00FF" />

            <com.mars.marsview.view.RoundProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:progress="100"
                mars:progress_text_color="#2A00FF" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>